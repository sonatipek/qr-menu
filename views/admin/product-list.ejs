<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: "Admin Girişi"}) %>
    
</head>
<body>
   
    <div class="w-100 px-4 mt-2">
        <a href="/admin" class="text-dark"><i class="fa-solid fa-chevron-left"></i></a>
    </div>
    
    <div class="d-flex align-items-center justify-content-between px-4 mt-3">
        <h1 class="h5">Ürünler</h1>
    
        <a href="#" class="text-decoration-none fw-medium"><small>Ürün Ekle <i class="fa-solid fa-plus"></i></small></a>
    
    </div>
    
    <!-- Ürün Card -->
    <div class="px-4 mt-3">
        <% products.forEach(product => { %>
            <ul class="list-group list-group-flush">
                <li class="list-group-item d-flex justify-content-between align-items-center border-bottom">
                    <span><%= product.title %></span>
                    <a href="/admin/categories/<%= product.productid %>" class="fw-medium text-decoration-none"><small>Edit</small></a></li>
            </ul>
    
        <% }) %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
</html>
