<% if (business) { %>
    <div id="place_img" class="position-relative" style="background-image: url('/img/<%= business.business_bg %>');">
      <div class="position-absolute">
        <div class="d-flex justify-content-between align-items-center px-4" style="height: 8vh; width: 100vw;">
          <a href="<%= business.business_ig %>" target="_blank"><i class="fa-brands fa-instagram text-white fs-5"></i></a>
          
          <div class="d-flex flex-column align-items-center mt-5" style="margin-top: 4.5rem !important">
              <img src="/img/<%= business.business_logo %>" alt="logo" class="rounded-circle border border-3 border-light mt-5" style="height: 5rem; width: 5rem;">
              <h1 class="text-white fw-medium fs-5 mt-3"><%= business.business_name %></h1>
          </div>
            
          <a href="<%= business.business_web %>" target="_blank"><i class="fa-solid fa-globe text-white fs-5"></i></a>
      
  
        </div>
  
        <div style="width: 100vw; height: 25vh;" class="d-flex flex-column align-items-start justify-content-end text-secondary">
        
          <div class="d-flex px-4">
              <div class="icons d-flex flex-column gap-2">
                  <small><i class="fa-solid fa-clock"></i></small>
                  <small><i class="fa-solid fa-location-dot"></i></small>
                  <small><i class="fa-solid fa-phone"></i></small>
              </div>
  
              <div class="contens d-flex flex-column gap-2 ms-3">
                  <small><%= business.business_open %> - <%= business.business_close %></small>
                  <small><%= business.business_adress %></small>
                  <small><%= business.business_tel %></small>
              </div>
          </div>      
  
  
        </div>
      </div>
    </div>

 <% } else { %>
  <div id="place_img" class="position-relative" style="background-image: url('https://placehold.co/600x400?text=Arka+Plan+Buraya');">
    <div class="position-absolute">
      <div class="d-flex justify-content-between align-items-center px-4" style="height: 8vh; width: 100vw;">
        <a href="#" target="_blank"><i class="fa-brands fa-instagram text-white fs-5"></i></a>
        
        <div class="d-flex flex-column align-items-center mt-5">
            <img src="https://placehold.co/400x400?text=Logo+Buraya" alt="logo" class="rounded-circle border border-3 border-light mt-5" style="height: 5rem; width: 5rem;">
            <h1 class="text-white fw-medium fs-5 mt-3">İşletme İsmi</h1>
        </div>
          
        <a href="#" target="_blank"><i class="fa-solid fa-globe text-white fs-5"></i></a>
     

      </div>

      <div style="width: 100vw; height: 25vh;" class="d-flex flex-column align-items-start justify-content-end text-secondary">
       
        <div class="d-flex px-4">
            <div class="icons d-flex flex-column gap-2">
                <small><i class="fa-solid fa-clock"></i></small>
                <small><i class="fa-solid fa-location-dot"></i></small>
                <small><i class="fa-solid fa-phone"></i></small>
            </div>

            <div class="contens d-flex flex-column gap-2 ms-3">
                <small>Açık - Kapalı</small>
                <small>Adres</small>
                <small>Telefon Numarası</small>
            </div>
        </div>      


      </div>
    </div>
  </div>
<% } %>
